# --- Discord (REQUIRED) ---
DISCORD_TOKEN=your_actual_discord_bot_token_here
DISCORD_CLIENT_ID=your_bot_application_id_here
# Optional alias if some code reads CLIENT_ID
CLIENT_ID=${DISCORD_CLIENT_ID}

# --- Database (REQUIRED) ---
# Use a real URL; add ?sslmode=require if your host needs SSL
DATABASE_URL=postgres://username:password@hostname:5432/database

# --- Game (CURRENT CODE EXPECTS THESE) ---
PULL_COST=1000
STARTING_BERRIES=5000
BASE_INCOME=50
INCOME_RATE=0.1

# --- Proposed new income fields (not read by code yet) ---
FULL_INCOME=6250
AUTO_INCOME_INTERVAL=10
MAX_STORED_HOURS=24

# --- Manual income ---
MANUAL_INCOME_MULTIPLIER=6
MANUAL_INCOME_COOLDOWN=60

# --- Logging ---
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false

# --- Performance ---
COMMAND_COOLDOWN=3000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=30

# --- Environment ---
NODE_ENV=production
